- var pageId = typeof title !== 'undefined' && title ? title.replace(/[^a-z]/ig, '').toLowerCase() : 'home';
!!!html
html(lang="en")
 head
  meta(charset="utf-8")
  title= typeof title !== 'undefined' && title ? "Remote Tilt - " + title : "Remote Tilt: test real-time motion without motion sensors"
  meta(name="HandheldFriendly", content="True")
  meta(name="MobileOptimized", content="320")
  meta(name="viewport", content="width=device-width, initial-scale=1, user-scalable=no")
  // link(rel="stylesheet", href="http://twitter.github.com/bootstrap/1.4.0/bootstrap.min.css")
  link(rel="stylesheet", href="/css/bootstrap.min.css")
  link(rel="stylesheet", href="/css/bootstrap-responsive.min.css")
  link(rel="stylesheet", href="/css/style.css")
  link(rel="stylesheet", href="/css/prettify.css")
 body(id= pageId, onload="prettyPrint()")
  div.navbar.navbar-fixed
   div.navbar-inner
    div.container
      a.brand(href="/") Remote Tilt
      ul.nav
       li.active
        a(href="#what") What
       li
        a(href="#how") How
       li
        a(href="#who") Who
       li
        a(href="#demo") Demos
      form.pull-right.navbar-search(action="/register", method="post")
        input.search-query.span2(placeholder="Enter your remote key")
  != body
    div.container
      footer
        :markdown
          Built by [@rem](http://twitter.com/rem) / [Left Logic](http://leftlogic.com)

          [MIT License](http://rem.mit-license.org) and all source available on [Github](http://github.com/remy/remote-tilt)
